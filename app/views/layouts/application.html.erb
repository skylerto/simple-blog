<!DOCTYPE html>
<html>
<head>
  <title>Simple Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main_content">
<div id="sidebar">

  <div id="navigation">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "logo-green.png" %>
      <% end %>
    </div>

    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>
      <% if user_signed_in? %>
      <li class="category">Hello, <%= current_user.email.split('@')[0] %> </li>
        <% if current_user.admin? %>
          <li class="nav_link"><%= link_to "Dashboard", dashboard_path %> </li>
        <% end %>
      <li class="nav_link"><%= link_to 'Logout', destroy_user_session_path, :method => :delete %> </li>
      <% else %>
        <li class="nav_link"><%= link_to('Login', new_user_session_path)  %></li>
      <% end %>
    </ul>
  </div>


  <div class="social">
      <span><a href="https://twitter.com/skylerto"> <%= image_tag "sm/twitter.png", :class => "social_media" %> </a></span>
      <span><a href="https://github.com/skylerto"><%= image_tag "sm/github.png", :class => "social_media" %> </a></span>
      <span><a href="mailto:skylerclayne@gmail.com"><%= image_tag "sm/mail.png", :class => "social_media" %> </a></span>
    </ul>
  </div>

</div>


  <% flash.each do |name, msg| %>
    <div class="message">
     <%= content_tag(:div, msg, class: "alert") %>
   </div>
  <% end %>

  <%= yield %>
</body>
</html>
